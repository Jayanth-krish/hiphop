#*    -------------------------------------------------------------    */
#*    Script to build the debian HipHop packages on a remote machine   */
#*=====================================================================*/

# configuration and variables
version=@VERSION@
minor=@MINOR@ 

user=$USER
host=
port=
tmp=/tmp

repodir=$HOME/prgm/distrib
targetdir=

while : ; do
  case $1 in
    "")
      break;;
    -h|--help)
      echo "usage makedebremote.sh [-p port] [-O dir] --repodir [dir] --tmp [dir] host[:port] [user]"
      exit 1;;
    -O)
      shift
      targetdir=$1;;
    -p)
      shift
      port=$1;;
    --repodir)
      shift;
      repodir=$1;;
    --tmp)
      tmp=$1;;
    *)
      if [ "$host " = " " ]; then
	host="$1"
      else
	user=$1
      fi
      ;;
  esac
  shift
done

if [ "$port " = " " ]; then
  port=`echo $host | awk -F: '{print $2}'`
  host=`echo $host | awk -F: '{print $1}'`
fi  

if [ "$port " != " " ]; then
  scpport="-P $port"
  sshport="-p $port"
fi  

if [ "$targetdir " = " " ]; then
  targetdir=$tmp/debhiphop/$host
fi

if [ ! -f $repodir/hiphop-$version$minor.tar.gz ]; then
  echo "*** ERROR: file \"$repodir/hiphop-$version$minor.tar.gz\" does not exist"
  exit 1
fi

cat > /tmp/configure.sh <<EOF
#!/bin/bash
export PATH=/opt/hiphop/bin:$PATH

pref=\`bigloo -eval "(begin (print (dirname (bigloo-config 'ld-library-dir))) (exit 0))"\`
cd $tmp/debhiphop.remote/hiphop-$version$minor; ./configure --disable-doc --prefix=\$pref
EOF

scp /tmp/configure.sh $user@$host:$sshport$tmp

ssh $sshport $host -l $user "mkdir -p $tmp/debhiphop.remote"
scp $scpport $repodir/hiphop-$version$minor.tar.gz $user@$host:$tmp/debhiphop.remote

ssh $sshport $host -l $user "bash -c \"cd $tmp/debhiphop.remote; tar xvfz hiphop-$version$minor.tar.gz\""
ssh $sshport $host -l $user "bash $tmp/configure.sh"
ssh $sshport $host -l $user "bash -c \"rm $tmp/configure.sh\""
ssh $sshport $host -l $user "bash -c \"export PATH=/opt/hiphop/bin:$PATH; cd $tmp/debhiphop.remote/hiphop-$version$minor/arch/debian; ./makedeb.sh --repodir $tmp/debhiphop.remote\""

mkdir -p $targetdir

for s in deb buildinfo changes; do
  scp $scpport "$user@$host:$tmp/debhiphop.remote/hiphop-$version$minor/arch/debian/buid.hiphop/*.$s" $targetdir
done  
